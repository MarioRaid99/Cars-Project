@model List<Car.ApplicationServices.Dtos.CarDto>

<h2>Cars</h2>

<p>
    <a asp-action="Create">Create</a>
</p>

@if (Model.Count == 0)
{
    <p>No cars yet.</p>
}
else
{
    <ul>
        @foreach (var car in Model)
        {
            <li>
                <a asp-action="Details" asp-route-id="@car.Id">@car.Make @car.Model</a>
            </li>
        }
    </ul>
}